<?xml version="1.0" encoding="utf-8"?>
<de.madcyph3r.materialnavigationdrawer.ripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleColor="#000000"
    app:mrl_rippleHover="true"    android:id="@id/amd_layout_ripple"
    app:mrl_rippleOverlay="true">


    <RelativeLayout
        android:id="@id/amd_layout_touch_area"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@id/amd_layout_left_icon"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="@dimen/sectionIconBannerHeight"
            android:scaleType="centerInside" />

        <TextView
            android:id="@id/amd_layout_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@id/amd_layout_notification"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </RelativeLayout>
</de.madcyph3r.materialnavigationdrawer.ripple.MaterialRippleLayout>